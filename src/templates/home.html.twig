{% extends "base.html.twig" %}


{% block title %}
Accueil du Blog
{% endblock %}

{% block body %}

<h1>Home</h1>

<h2>Formulaire de contact</h2>
<p>Les champs noté d'un * sont obligatoires</p>
<form action="contact" method="post">
    <p><label for="firstName">Prénom* </label><input type="text" id="firstName" name="firstName" required></p>
    <p><label for="lastName">Nom* </label><input type="text" id="lastName" name="lastName" required></p>
    <p><label for="email">Email* </label><input type="email" id="email" name="email" required></p>
    <p><label for="title">Titre du message* </label><input type="text" id="title" name="title" required></p>
    <p><label for="content">Contenu du message* </label><textarea id="content" name="content" required></textarea></p>
    <p>
        <input type="checkbox" id="mentions" name="mentions" required>
        <label for="mentions">En envoyant ce formulaire, j'accepte la collecte de mes données personnelles conformément aux <a href="/blogphp/mentions-legales">mentions légales</a> du site. *</label>
    </p>
    <input type="submit" value="Envoyer" name="contactForm">
</form>

{% endblock %}