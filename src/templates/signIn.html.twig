{% extends "baseVisitor.html.twig" %}

{% block title %}
S'inscrire
{% endblock %}

{% block body %}

    {% if fail %}

    <div class="flashMessage fail" id="flashMessage">
        {{ fail }}
    </div>

    {% endif %}

    <h1>Inscrivez-vous</h1>

    <form action="traitement-inscription" method="post">
        <p><label for="pseudo">Pseudo : </label><input type="text" id="pseudo" name="pseudo" required></p>
        <p><label for="password">Mot de passe : </label><input type="password" id="password" name="password" required></p>
        <p><label for="password-valid">Validation du mot de passe : </label><input type="password" id="password-valid" name="passwordValid" required></p>
        <p><label for="email">Email : </label><input type="mail" id="email" name="email" required></p>
        <p><input type="checkbox" name="mentionsAccepted"> J'accepte les conditions d'utilisation du site</p>
        <input type="submit" name="signIn" value="S'incrire">
    </form>

{% endblock %}