<!DOCTYPE>
<html>
    <head>
        <meta charset="utf-8">
        <title>
        
        {% block title %}
        {% endblock %}

        </title>

        {% block css %}
        {% endblock %}

    </head>
    <body>

        {% if session.success %}

            <div class="flashMessage success" id="flashMessage">
                {{ session.success }}
            </div>

        {% endif %}

        {% if session.fail %}

            <div class="flashMessage fail" id="flashMessage">
                {{ session.fail }}
            </div>

        {% endif %}
    
        
        {% if session.pseudo %}
            <header>
                {% if session.admin %}
                    {% include 'navAdmin.html.twig' %}
                {% else %}
                    {% include 'navUserConnected.html.twig' %}
                {% endif %}
            </header>

        {% else %}
            <header>
                {% include 'navVisitor.html.twig' %}
            </header>
        {% endif %}

        {% block body %}
        {% endblock %}

        {% if session.pseudo %}
            <footer>
                {% if session.admin %}
                    {% include 'navAdmin.html.twig' %}
                    <div class="button">
                        <p><a href="/blogphp/admin-posts">Partie Admin</a></p>
                    </div>
                {% else %}
                    {% include 'navUserConnected.html.twig' %}
                {% endif %}
                
            </footer>

        {% else %}
            <footer>
                {% include 'navVisitor.html.twig' %}
            </footer>
        {% endif %}

        {% block js %}
        {% endblock %}

    </body>
</html>