<!DOCTYPE>
<html>
    <head>
        <meta charset="utf-8">
        <title>
        
        {% block title %}
        {% endblock %}

        </title>

        {% block css %}
        {% endblock %}

    </head>
    <body>

        {% if success %}

        <div class="flashMessage success" id="flashMessage">
            {{ success }}
        </div>

        {% endif %}

        {% if fail %}

        <div class="flashMessage fail" id="flashMessage">
            {{ fail }}
        </div>

        {% endif %}
    
        <header>
            <nav>
                <ul>
                    <li><a href="/blogphp/">Accueil</a></li>
                    <li><a href="/blogphp/liste-posts">Liste des posts</a></li>
                    <li><a href="/blogphp/déconnexion">Se déconnecter</a></li>
                </ul>
            </nav>
        </header>

        {% block body %}
        {% endblock %}

        <footer>
            <nav>
                
                <ul>
                    <li><a href="/blogphp/">Accueil</a></li>
                    <li><a href="/blogphp/liste-posts">Liste des posts</a></li>
                    <li><a href="/blogphp/déconnexion">Se déconnecter</a></li>
                </ul>
        
                {% if idUser %}

                <div class="button">
                    <p><a href="/blogphp/admin-posts">Partie Admin</a></p>
                </div>

                {% endif %}
            </nav>
        </footer>

        {% block js %}
        {% endblock %}

    </body>
</html>