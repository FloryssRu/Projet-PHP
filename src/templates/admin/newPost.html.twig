{% extends "base.html.twig" %}

{% block title %}
Nouveau Post
{% endblock %}

{% block css %}
    <script src="/blogphp/vendor/tinymce/tinymce/tinymce.min.js"></script>
    <script type="text/javascript">
        tinymce.init({
            selector: '#heading'
        });
        tinymce.init({
            selector: '#content'
        });
    </script>
{% endblock %}

{% block body %}
<div class="maincontent">
    <section class="divForForm">
        <h1>Nouveau Post</h1>
        <form action="ajout-post" method="post" enctype="multipart/form-data">
            <p><label for="title">Titre</label><input type="text" name="title" id="title" required></p>
            <p><label for="heading" class="miniMarginBot">Chapô</label><textarea id="heading" name="heading"></textarea></p>
            <p><label for="content" class="miniMarginBot">Contenu de l'article</label><textarea id="content" name="content"></textarea></p>
            <p>
                <label for="picture">Ajouter une image au post (Formats acceptés : .jpg, .png et .gif, Taille max 3Mo)</label><br>
                <input type="file" name="picture" id="picture">
            </p>
            <p><label for="author">Auteur</label><input type="text" name="author" id="author" required></p>
            <input type="hidden" name="token" value="{{ session.token }}">
            <input type="submit" value="Ajouter le post" name="newPost"  class="buttonRed">
        </form>
    </section>
</div>

{% endblock %}