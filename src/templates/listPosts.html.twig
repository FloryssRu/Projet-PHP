{% extends "base.html.twig" %}


{% block title %}
Liste des Posts
{% endblock %}

{% block body %}

<h1>Liste des posts publi√©s</h1>
{% for post in listPosts %}
    <div class="postInList">
        <h2>{{ post.title }}</h2>
        {% if post.date_last_update %}
            <p>{{ post.date_last_update }}</p>
        {% else %}
            <p>{{ post.date_publication }}</p>
        {% endif %}
        <p>{{ post.heading }}</p>
        <p><a href="post?idPost={{ post.id }}">Lire ce post</a></p>
    </div>
{% endfor %}

{% endblock %}